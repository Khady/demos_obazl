# lm: local (hw) machine; vm: ocaml virtual machine (bytecode)
build:lm --host_platform=@opam//tc/host/build:local
build:lm --platforms=@opam//tc/host/target:local

build:vm --host_platform=@opam//tc/host/build:local
build:vm --platforms=@opam//tc/host/target:vm

build:lmlm --host_platform=@opam//tc/host/build:local
build:lmlm --platforms=@opam//tc/host/target:local

# build:lmvm --host_platform=@opam//tc/host/build:lm
build:lmvm --platforms=@opam//tc/host/target:vm

build:vmvm --host_platform=@opam//tc/host/build:vm
build:vmvm --platforms=@opam//tc/host/target:vm
build:vmlm --host_platform=@opam//tc/host/build:vm
build:vmlm --platforms=@opam//tc/host/target:local

build:lmarm --platforms=@opam//tc/host/target:arm

