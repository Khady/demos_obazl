# To build the module: $ bazel build mwe/hello_module:_Hello
# To run the test:     $ bazel test mwe/hello_module:test

load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_module",
    "ocaml_test",
)

ocaml_test(
    name = "test",
    main = "Test",
)

ocaml_module(
    name   = "Test",
    struct = "test.ml",
    opts = ["-linkall"],
    deps = [
        "@ounit2//:ounit2",
        ":Hello",
    ],
)

ocaml_module(
    name = "Hello",
    struct = "hello.ml",
)
