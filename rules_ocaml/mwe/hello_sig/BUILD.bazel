load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_module",
    "ocaml_signature",
    "ocaml_test",
)

ocaml_test(
    name = "test",
    main = ":Test"
)

ocaml_module(
    name   = "Test",
    struct = "test.ml",
    deps = [
        ":Hello",
        "@ounit2//:ounit2",
    ],
)

ocaml_module(
    name = "Hello",
    struct = "hello.ml",
    sig    = ":Hello.cmi",
)

ocaml_signature(
    name = "Hello.cmi",
    src = "hello.mli",
)

