load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_module",
    "ocaml_library",
    "ocaml_ns_resolver",
    "ocaml_test",
)

ocaml_ns_resolver(
    name = "cmyk_ns",
    ns   = "CMYK",
    submodules = [
        "Cyan",
        "Magenta",
        "Yellow",
        "Key"
        ],
    visibility = ["//ns/bottomup/compose:__subpackages__"],
)

ocaml_library(
    name = "libCMYK",
    manifest = [
        ":Cyan",
        ":Magenta",
        ":Yellow",
        ":Key",
        ":cmyk_ns"
    ],
    visibility = ["//visibility:public"],
)

#############
ocaml_module(
    name        = "Cyan",
    ns_resolver = ":cmyk_ns",
    struct      = "cyan.ml",
    visibility = ["//ns/bottomup/embed/mwe:__pkg__"],
)

ocaml_module(
    name = "Magenta",
    ns_resolver = ":cmyk_ns",
    struct = "magenta.ml",
    visibility = ["//ns/bottomup/embed/mwe:__pkg__"],
)

ocaml_module(
    name = "Yellow",
    ns_resolver = ":cmyk_ns",
    struct = "yellow.ml",
    visibility = ["//ns/bottomup/embed/mwe:__pkg__"],
)

ocaml_module(
    name = "Key",
    ns_resolver = ":cmyk_ns",
    struct = "key.ml",
    visibility = ["//ns/bottomup/embed/mwe:__pkg__"],
)

#############
ocaml_module(
    name   = "Test",
    struct = "test.ml",
    deps = [
        ":libCMYK",
        "@ounit2//:ounit2"
    ],
)

ocaml_test(
    name = "test",
    main = ":Test",
)
