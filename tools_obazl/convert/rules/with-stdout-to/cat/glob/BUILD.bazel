    name  = "__output.ml__",
    srcs  = [
        "world.txt",
        "hello.txt"
    ],
    outs  = [
        "output.ml"
    ],
    cmd   = " ".join([
        "cat",
        "$(location rules/with-stdout-to/cat/glob/world.txt)",
        "$(location rules/with-stdout-to/cat/glob/hello.txt)",
        "> $@"
    ]),
